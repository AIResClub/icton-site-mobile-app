<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.itmo.ictmobile">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.itmo.IctApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_app_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_app_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.IctMobile">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".screens.sign.SignActivity" />
        <activity android:name=".screens.askIct.askquestion.AnswerIctActivity" />
    </application>

</manifest>